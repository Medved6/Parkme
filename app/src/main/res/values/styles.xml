<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColor">@color/colorBlack</item>


    </style>



    <style name="App_EditTextStyle" parent="Theme.AppCompat.Light.DarkActionBar">
        <item name="android:editTextStyle">@style/App_EditTextStyle.input</item>
        <item name="android:textColor">#00ff00</item>
    </style>


    <style name="App_EditTextStyle.input">
        <item name="android:editTextColor">#ff0000</item>
    </style>


    <!--  BLUE LINE -->


    <style name="blue_line_style">
        <item name="android:background">@color/colorPrimary</item>
        <item name="android:alpha">0.5</item>
    </style>




    <!--  LISTVIEW  -->

    <style name="ReservationListView">
        <item name="android:paddingTop">54dp</item>
        <!-- <item name="android:paddingLeft">16dp</item>
        <item name="android:paddingRight">16dp</item> -->
        <item name="android:background">#F6F9FD</item>
    </style>




    <!--  LIST VIEW CARD  -->

    <style name="ListViewCard" parent="CardView">

        <item name="android:background">@drawable/list_view_card_shape</item>

    </style>





    <!-- MAP SPOT CARD STYLE -->


    <style name="map_spot_card_style">
        <item name="android:background">@drawable/marker_detail_shape</item>
    </style>



    <style name="marker_detail_subtitle_style">
        <item name="android:textAllCaps">true</item>
        <item name="android:alpha">.3</item>
        <item name="android:textSize">12sp</item>
        <item name="android:layout_marginTop">12dp</item>


    </style>





    <!--  RESERVATION BUTTON  -->

    <style name="button_green" parent="Base.Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/reservation_button_shape</item>
        <item name="android:textColor">@color/colorWhite</item>
        <item name="android:textAllCaps">true</item>
    </style>




    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>



    <style name="title_color_custom">
        <item name="android:textColor">#ff0000</item>
    </style>




    <style name="myCustomMenuTextApearance">
        <item name="android:textColor">#ff0000</item>
    </style>






    <style name="NavDrawer">

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="AppTheme.FullScreen"/>

</resources>

