<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.sergewsevolojsky.parkme.activity.InscriptionActivity">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- NAME INPUT  -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="64dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nom complet"
                    android:labelFor="@+id/register_name_edit_text"
                    android:textAllCaps="true"
                    android:textSize="13sp"
                    android:alpha="0.5"/>
                <EditText
                    android:id="@+id/register_name_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:paddingBottom="16dp"
                    android:layout_marginTop="16dp"
                    />

            </RelativeLayout>




            <!--  EMAIL INPUT  -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="64dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Email"
                    android:labelFor="@+id/register_email_edit_text"
                    android:textAllCaps="true"
                    android:textSize="13sp"
                    android:alpha="0.5"/>
                <EditText
                    android:id="@+id/register_email_edit_text"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:paddingBottom="16dp"
                    android:layout_marginTop="16dp"
                    />

            </RelativeLayout>




            <!--  PASSWORD  -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="64dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Mot de passe"
                    android:labelFor="@+id/register_password_edit_text"
                    android:textAllCaps="true"
                    android:textSize="13sp"
                    android:alpha="0.5"/>
                <EditText
                    android:id="@+id/register_password_edit_text"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:paddingBottom="16dp"
                    android:layout_marginTop="16dp"
                    />

            </RelativeLayout>




            <!--  CARTE NUMBER  -->

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="64dp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="NumÃ©ro de carte"
                    android:labelFor="@+id/register_card_edit_text"
                    android:textAllCaps="true"
                    android:textSize="13sp"
                    android:alpha="0.5"/>
                <EditText
                    android:id="@+id/register_card_edit_text"
                    android:inputType="textPassword"
                    android:layout_width="match_parent"
                    android:layout_height="64dp"
                    android:paddingBottom="16dp"
                    android:layout_marginTop="16dp"
                    />

            </RelativeLayout>




            <!-- CARD INFORMATION -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="64dp"
                android:orientation="horizontal">


                <!--  EXPIRATION DATE  -->

                <LinearLayout
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_marginRight="32dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Date d'expiration"
                        android:textAllCaps="true"
                        android:textSize="13sp"
                        android:alpha="0.5"/>
                    
                    <LinearLayout

                        android:layout_height="wrap_content"
                        android:layout_width="match_parent"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/register_expiration_month_edit_text"
                            android:inputType="number"
                            android:layout_height="64dp"
                            android:paddingBottom="16dp"
                            android:layout_width="0dp"
                            android:layout_weight=".5"/>

                        <EditText
                            android:id="@+id/register_expiration_year_edit_text"
                            android:inputType="number"
                            android:layout_height="64dp"
                            android:paddingBottom="16dp"
                            android:layout_width="0dp"
                            android:layout_weight=".5"/>


                    </LinearLayout>




                </LinearLayout>



                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_weight=".5"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="32dp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CVV"
                        android:labelFor="@+id/register_card_cryptogram_edit_text"
                        android:textAllCaps="true"
                        android:textSize="13sp"
                        android:alpha="0.5"/>
                    <EditText
                        android:id="@+id/register_card_cryptogram_edit_text"
                        android:inputType="number"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:paddingBottom="16dp"
                        android:layout_marginTop="16dp"
                        />


                </RelativeLayout>


            </LinearLayout>


            <Button
                android:id="@+id/RegistrationValidateButton"
                android:layout_width="match_parent"
                style="@style/ButtonBlue"
                android:text="Valider"
                android:background="@drawable/button_blue"
                android:onClick="login"
                android:layout_marginBottom="42dp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="24dp"

                >
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Deja inscris?"
                    android:textAllCaps="true"
                    android:alpha="0.5"/>
                <TextView
                    android:id="@+id/go_login"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Se connecter?"
                    android:layout_marginLeft="12dp"
                    android:textAllCaps="true"/>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>



</RelativeLayout>
